<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="620.0" prefWidth="880.0" style="-fx-background-color: #2196f3;" stylesheets="@application.css"
xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.ProfilController">
   <children>
      <VBox alignment="CENTER" layoutX="10.0" layoutY="10.0" prefHeight="600.0" prefWidth="870.0">
         <children>
            <Label fx:id="lblUsername" alignment="CENTER" prefHeight="30.0" prefWidth="270.0" style="-fx-background-color: #4D4D4D; -fx-background-radius: 10;" text="Username" textFill="WHITE">
               <VBox.margin>
                  <Insets left="300.0" right="300.0" top="10.0" />
               </VBox.margin>
            </Label>
            <Label fx:id="lblUsermail" alignment="CENTER" prefHeight="30.0" prefWidth="270.0" style="-fx-background-color: #4D4D4D; -fx-background-radius: 10;" text="Useremail" textFill="WHITE">
               <VBox.margin>
                  <Insets left="300.0" right="300.0" top="10.0" />
               </VBox.margin>
            </Label>
            <Button fx:id="btShowPassword" mnemonicParsing="false" onAction="#showPassword" prefHeight="30.0" prefWidth="280.0" style="-fx-background-color: #4D4D4D; -fx-background-radius: 10;" text="Mein Password anzeigen" textFill="WHITE">
               <VBox.margin>
                  <Insets left="300.0" right="300.0" top="10.0" />
               </VBox.margin>
            </Button>
            <TextField fx:id="tfShowPassword" prefHeight="30.0" prefWidth="280.0" style="-fx-background-radius: 10;">
               <VBox.margin>
                  <Insets left="300.0" right="300.0" top="5.0" />
               </VBox.margin>
            </TextField>
            <Button fx:id="btLogout" mnemonicParsing="false" onAction="#loadLogout" prefHeight="30.0" prefWidth="280.0" style="-fx-background-color: orange; -fx-background-radius: 10;" text="Logout" textFill="WHITE">
               <VBox.margin>
                  <Insets left="300.0" right="300.0" top="10.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
